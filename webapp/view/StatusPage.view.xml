<mvc:View xmlns:core="sap.ui.core" xmlns:mvc="sap.ui.core.mvc" xmlns="sap.m" controllerName="inventory.Inventory.controller.StatusPage"
	xmlns:html="http://www.w3.org/1999/xhtml" xmlns:semantic="sap.m.semantic" xmlns:f="sap.ui.layout.form" xmlns:tnt="sap.tnt"
	xmlns:o="sap.uxap" xmlns:layout="sap.ui.layout" xmlns:pf="sap.suite.ui.commons">
	<App>
		<pages>
			<SplitContainer>
				<masterPages>
					<Page title="{i18n>Status list}" showNavButton="true" navButtonPress="onClick">
						<content>
							<SearchField liveChange="onSearch"/>
							<List id="list1" items="{/zinStatusSet}" itemPress="onItemPressed">
								<items>
									<ObjectListItem title="{Issue}" number="{Eid}" type="Active">
										<attributes>
											<ObjectAttribute title="Date" text="{Submitingdate}"/>
										</attributes>
									</ObjectListItem>
								</items>
							</List>
						</content>
						<footer>
							<Toolbar></Toolbar>
						</footer>
					</Page>
				</masterPages>
				<detailPages>
					<Page title="{i18n>status}">
						<headerContent>
							<Button icon="sap-icon://log" press="onLogout"/>
						</headerContent>
						<content>
							<f:SimpleForm id="SimpleFormDisplay" editable="true" layout="ResponsiveGridLayout"
								title="{i18n>status} of Ticket Number {}" labelSpanXL="3" labelSpanL="3" labelSpanM="3" labelSpanS="12"
								adjustLabelSpan="false" emptySpanXL="4" emptySpanL="4" emptySpanM="4" emptySpanS="0" columnsXL="1" columnsL="1" columnsM="1"
								singleContainerFullSize="false">
								<f:content>
									<Label text="Ticket Number"/>
									<Text text="{data>/Status/Ticketno}"/>
									<Label text="Issue"/>
									<Text text="{data>/Status/Issue}"/>
									<Label text="Description"/>
									<Text text="{data>/Status/Issuedescription}"/>
									<Label text="Date"/>
									<Text text="{data>/Status/Submitingdate}"/>
									<Label text="Status" class="sapUiMediumMarginTop"/>
									<!--<Text text="{data>/odata/status}"/>-->
									<pf:ProcessFlow>
										<pf:lanes>
											<pf:ProcessFlowLaneHeader iconSrc="{data>/Status/Tlstatusicon}" text="{Tlstatus}" position="{}"
												id="idTlStatus"/>
											<pf:ProcessFlowLaneHeader iconSrc="{data>/Status/Hrstatusicon}" text="{Hrstatus}" position="{}"
												id="idHrStatus"/>
										</pf:lanes>
									</pf:ProcessFlow>
									<Label text="HR Status" visible="{}"/>
									<Text text="{}"/>
									<Label></Label>
									<Text text="{}"></Text>
								</f:content>
							</f:SimpleForm>
							<f:SimpleForm id="emptyId">
								<Text text=" Click List Item To Get The Status "/>
							</f:SimpleForm>
						</content>
						<footer>
							<Toolbar>
								<ToolbarSpacer/>
								<Button text="Resend" type="Accept" visible="{}"></Button>
							</Toolbar>
						</footer>
					</Page>
				</detailPages>
			</SplitContainer>
		</pages>
	</App>
</mvc:View>